<%= render 'users/User-info', user: @user %>
<%= render 'books/New-book', book: @book %>

<h2>Book detail</h2>
<table>
<% @books.each do |book| %>
  <tr>
    <td>
      <p><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></p>
      <p><%= link_to book.user.name, user_path(book.user_id) %></p>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
